<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/restaurant_name_edittext"
        android:layout_width="265dp"
        android:layout_height="46dp"
        android:layout_margin="16dp"
        android:hint="Restaurant Name"
        app:layout_constraintBottom_toTopOf="@id/restaurant_address_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/restaurant_address_edittext"
        android:layout_width="263dp"
        android:layout_height="42dp"
        android:layout_margin="16dp"
        android:hint="Restaurant Address"
        app:layout_constraintBottom_toTopOf="@id/save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name_edittext"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="161dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:text="Save Restaurant"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_address_edittext"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
